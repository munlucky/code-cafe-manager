{
  "name": "@codecafe/desktop",
  "version": "0.1.0",
  "description": "CodeCafe Manager - Electron desktop application",
  "type": "module",
  "main": "./dist/main/index.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p tsconfig.json",
    "build:preload": "tsc -p tsconfig.json",
    "build:renderer": "webpack --config webpack.renderer.config.cjs --mode production",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -b --watch",
    "dev:renderer": "webpack serve --config webpack.renderer.config.cjs --mode development",
    "clean": "rm -rf dist out *.tsbuildinfo",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.renderer.json --noEmit"
  },
  "keywords": [
    "codecafe",
    "electron",
    "desktop"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@codecafe/core": "workspace:*",
    "@codecafe/git-worktree": "workspace:*",
    "@codecafe/orchestrator": "workspace:*",
    "@codecafe/schema": "workspace:*",
    "clsx": "^2.1.0",
    "dotenv": "^16.4.5",
    "electron-squirrel-startup": "^1.0.0",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.303.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@electron-forge/plugin-webpack": "^7.2.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "html-webpack-plugin": "^5.6.0",
    "postcss": "^8.4.32",
    "postcss-loader": "^8.2.0",
    "shadcn": "^3.6.3",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.4.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
