{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["tests_run", "tests_passed", "tests_failed", "summary"],
  "properties": {
    "tests_run": {
      "type": "number"
    },
    "tests_passed": {
      "type": "number"
    },
    "tests_failed": {
      "type": "number"
    },
    "failures": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["test", "error"],
        "properties": {
          "test": {
            "type": "string"
          },
          "error": {
            "type": "string"
          },
          "suggestion": {
            "type": "string"
          }
        }
      }
    },
    "coverage": {
      "type": "number"
    },
    "summary": {
      "type": "string"
    }
  }
}
