{
  "name": "@codecafe/schema",
  "version": "0.1.0",
  "description": "CodeCafe YAML/JSON schema and validation",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b --watch",
    "clean": "powershell -Command \"Remove-Item -Recurse -Force dist, *.tsbuildinfo -ErrorAction SilentlyContinue\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["codecafe", "schema", "validation"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "zod": "^3.22.4",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  }
}
